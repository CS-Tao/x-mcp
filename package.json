{
  "name": "ext-mcp",
  "version": "1.0.0-alpha.3",
  "description": "可扩展 MCP 框架 - Extendable MCP Framework",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "demo": "npm run build && tsx demo",
    "test": "tsc -p tsconfig.demo.json && mcp-inspector --cli npm run demo --method tools/call --tool-name say-hello --tool-arg name=ext-mcp | grep -q 'Hello, ext-mcp!' || (echo 'test failed' && exit 1)",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.2",
    "@types/node": "24.10.0",
    "typescript": "^5.9.3",
    "rimraf": "^6.1.0",
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">= 18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cs-tao/x-mcp"
  },
  "bugs": {
    "url": "https://github.com/cs-tao/x-mcp/issues"
  },
  "homepage": "https://github.com/cs-tao/x-mcp#readme",
  "keywords": ["mcp", "modelcontextprotocol", "x-mcp", "ext-mcp"]
}