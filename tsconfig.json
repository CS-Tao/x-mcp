{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "es2020",
    "types": [
      "node"
    ],
    "declaration": true,
    "rootDir": ".",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "ext-mcp": ["."]
    }
  },
  "include": [
    "src",
    "demo"
  ],
  "exclude": ["node_modules", "lib"]
}